PYTHON=${PYTHON:-python3}
"$PYTHON" -m pyflakes --version > /dev/null || exit 1
if [ $# -eq 0 ]
then
    set -- \
        $(grep -l -r '^#!.*python' .) \
        $(find . -name '*.py')
fi
exec "$PYTHON" -m pyflakes "$@"

